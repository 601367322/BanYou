<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="100">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 主体背景颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/border_color" />
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- 主体背景颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>