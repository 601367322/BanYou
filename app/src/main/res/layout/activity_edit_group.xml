<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include
        layout="@layout/custom_back_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <FrameLayout
        android:layout_marginTop="8dp"
        android:id="@+id/pic_contents"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"></FrameLayout>
    <TextView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="提示：长按图片，可以进行更多操作。"/>
    <LinearLayout
        android:id="@+id/group_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sex_filter_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_nickname"
            android:textColor="@color/group_create_key"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/et_group_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|right"
            android:singleLine="true"
            android:textColor="@color/group_create_value"
            android:textSize="14sp"/>
        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/caret" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@drawable/sex_filter_selector"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_intro"
            android:textColor="@color/user_info_key"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/et_group_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:minHeight="76dp"
                android:textColor="@color/user_info_value"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/caret" />
    </LinearLayout>
    <Button
        android:id="@+id/dissolve_group"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/dissolve_group_selector"
        android:text="解散该群"
        android:textColor="@color/activity_bg"
        android:textSize="14sp" />
</LinearLayout>
