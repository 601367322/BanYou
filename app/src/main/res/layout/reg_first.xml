<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/custom_back_actionbar" />     <!--android:textSize="14sp" />-->

    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="输入手机号码"
        android:inputType="number"
        android:textColor="@color/darkgray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/authcode"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/white"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="输入短信验证码"
            android:inputType="number"
            android:textColor="@color/darkgray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sendCode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:enabled="true"
            android:background="@drawable/authcode_send_bg"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/agreement1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/darkgray"
            android:text="请您查看"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/agreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="伴游用户协议"
            android:layout_marginRight="10dp"
            android:textColor="@color/red_number"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="注册表示您同意伴游用户协议其中包含位置服务和隐私条款，伴游对违反协议用户会采取封锁设置措施，请约束行为。"
        android:textColor="@color/darkgray"
        android:textSize="14sp" />
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/commit_btn_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>