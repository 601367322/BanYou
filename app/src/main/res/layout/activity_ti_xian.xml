<?xml version="1.0" encoding="utf-8"?>
<com.quanliren.quan_one.custom.CustomRelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/crl"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionbar"
        layout="@layout/custom_back_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" />
    <ScrollView
        android:layout_below="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/acounts_ll"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/user_info_key"
                    android:text="支付宝账号"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/more_account"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:padding="12dp"
                    android:layout_marginRight="2dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/qz_icon_navbar_drop_down" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/user_info_key"
                    android:text="支付宝姓名"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="提现金额(￥)"/>
                <com.quanliren.quan_one.custom.MoneyEditText
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:paddingLeft="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提现金额：￥"/>
                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"/>
            </LinearLayout>
            <Button
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/tixian_btn"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="提现"
                android:background="@drawable/commit_btn_selector"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:text="1、只支持支付宝提现。\n2、提现金额必须不少于100元。\n3、提现申请提交后，72小时内人工审核，审核通过后进行打款。\n4、提现手续费为0.5%，最低1元，最高25元。\n5、打款日为每月的1号、15号，节假日顺延。
" />
        </LinearLayout>
    </ScrollView>
</com.quanliren.quan_one.custom.CustomRelativeLayout>
