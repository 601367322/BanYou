<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/nick_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/username"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/nickname"
            android:src="@drawable/vip_1"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nick_ll"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/constell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nick_ll"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/sex"
        android:background="@drawable/constell_bg"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/auth_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/constell"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/constell"
        android:text="认证"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:background="@drawable/auth_icon" />
</RelativeLayout>