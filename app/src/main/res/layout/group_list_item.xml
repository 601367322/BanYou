<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@drawable/menu_btm_selector"
    android:orientation="horizontal"
    >

    <com.quanliren.quan_one.custom.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/group_logo"
        android:src="@drawable/defalut_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/username"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/group_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:src="@drawable/vip_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_list_member_count_bg"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/group_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/group_list_location_bg"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/signature"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>